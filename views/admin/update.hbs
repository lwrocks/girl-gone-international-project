<h1>Update A Community</h1>

<form action="/community/{{community._id}}/update" method="POST">
  <label for="communityName">Community Name</label>
  <input type="text" value="{{community.communityName}}" name="communityName" id="communityName">
  <label for="location">Location</label>
  <input type="text" value="{{community.location}}" name="location" id="location">
  <label for="communitySize">Community Size</label>
  <input type="text" value="{{community.communitySize}}" name="communitySize" id="communitySize">
  <label for="communityManagers">Community Manager Name</label>
  <input type="text" value="{{community.communityManagers}}" name="communityManagers" id="communityManagers">
  <label for="url">Community Link</label>
  <input type="url" value="{{community.url}}" name="url" id="url">
  <button type="submit">Update Community</button>
</form>